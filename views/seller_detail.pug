extends layout

block content

  h1 Seller: #{seller.name}

  div(style="margin-left:20px; margin-top:40px; margin-bottom: 40px")
    h2 Item Selling:
    if sellerItemInstances.length
      for itemInstance in sellerItemInstances
        ul
          li
            p #[strong Item Name:]
              a(href=itemInstance.url) 
                span(class='item' + itemInstance.item.quality) #{itemInstance.item.name}
         
    else
      p This seller has no items to sell.
    
  hr
  p 
  a(href=seller.url + '/delete') Delete seller
  p 
  a(href=seller.url + '/update') Update seller