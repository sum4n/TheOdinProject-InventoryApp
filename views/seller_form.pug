extends layout

block content

  h1 #{title}

  form(method="POST")
    div.form-group
      label(for='first_name') First Name:
      input#first_name(type='text', placeholder='FirstName' name='first_name', required value=(undefined===seller ? '' : seller.first_name))
      
      label(for='last_name') Last Name:
      input#last_name(type='text', placeholder='LastName' name='last_name', required value=(undefined===seller ? '' : seller.last_name))
      
      button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg